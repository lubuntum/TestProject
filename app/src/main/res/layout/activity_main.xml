<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/square_0"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text=""
                    android:backgroundTint="@color/bootstrap_gray_light"
                    />
                <Button
                    android:id="@+id/square_1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text=""
                    android:backgroundTint="@color/bootstrap_gray_light"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/square_2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text=""
                    android:backgroundTint="@color/bootstrap_gray_light"
                    android:layout_marginLeft="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/square_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light" />
            <Button
                android:id="@+id/square_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/square_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/square_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light" />
            <Button
                android:id="@+id/square_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/square_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=""
                android:backgroundTint="@color/bootstrap_gray_light"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>